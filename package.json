{
  "name": "gamefaqs-reader",
  "version": "0.3.0",
  "description": "Read gamefaqs guides easily",
  "author": "Andrew McOlash",
  "license": "MIT",
  "main": "build/dist-electron/main.js",
  "scripts": {
    "start": "vite",
    "preview": "vite preview",
    "build": "vite build && electron-builder",
    "release": "npm run build",
    "upgrade": "npx npm-check-updates --interactive"
  },
  "dependencies": {
    "@formkit/auto-animate": "^1.0.0-beta.6",
    "electron-fetch": "^1.9.1",
    "electron-updater": "^5.3.0",
    "electron-window-state": "^5.0.3",
    "joypad.js": "^2.3.3",
    "jsdom": "^21.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-highlight-words": "^0.20.0",
    "react-simple-keyboard": "^3.5.44",
    "set-cookie-parser": "^2.6.0",
    "simple-keyboard-key-navigation": "^2.4.246",
    "typestyle": "^2.4.0"
  },
  "devDependencies": {
    "babel-preset-nano-react-app": "^0.1.0",
    "electron": "^23.2.0",
    "electron-builder": "^24.0.0",
    "vite": "^4.2.1",
    "vite-electron-plugin": "^0.8.2",
    "vite-plugin-svgr": "^2.4.0"
  },
  "babel": {
    "presets": [
      "nano-react-app"
    ]
  },
  "build": {
    "appId": "com.amcolash.gamefaqs-reader",
    "artifactName": "${productName}.${ext}",
    "asar": true,
    "icon": "public/icon.svg",
    "directories": {
      "output": "build/release/${version}"
    },
    "files": [
      "build/dist",
      "build/dist-electron"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "desktop": {
        "Name": "GameFAQs Reader"
      }
    }
  }
}
